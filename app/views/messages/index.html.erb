<p id="notice"><%= notice %></p>

<h1 align="center" style="font-family:Proxima Nova; font-size:50px">M E S S A G E S  <%= link_to image_tag("add.png", size: "40x40", title: "New Message"), new_message_path %>
</h1>

<table class="table" align="center" style="font-family:Proxima Nova; font-size:20px" >
  <thead>
    <tr>
      <th>Sender</th>

	  <th>Subject</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.sender %></td>
		<td><%= message.subject %></td>
        <td><%= message.date %></td>
        <td><%= link_to 'Open', message %></td>
        <td><%= link_to 'Delete', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

